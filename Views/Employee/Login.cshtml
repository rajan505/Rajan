@model NYCPaymentPortal.Models.LoginDetails
<div class="container">
    <div class="form-group">

    </div>
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">

            <div class="panel-heading">
                <div class="panel-title">Log in to your NYCID Account</div>
                <div class="panel-body pull-right">
                    Don't have an account!
                    <a href="#" onclick="$('#loginbox').hide(); $('#signupbox').show()">
                        Register
                    </a>
                </div>
            </div>

            <div style="padding-top:30px" class="panel-body">
                <div style="display:none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <div class="panel-body">
                    <div class="col-lg-9">
                        @using (Html.BeginForm("Login", "Employee", FormMethod.Post, new { @class = "form-horizontal" }))
                        {

                            <div class="form-group">
                                <label class="col-md-6 control-label" for="textinput">User Name</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control input-md" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-6 control-label" for="textinput">Password </label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control input-md", type = "Password" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-6 control-label" for="textinput"> </label>
                                <div class="col-md-6">
                                    <input name="submit" type="submit" id="submit" class="btn btn-primary" value="Login" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
